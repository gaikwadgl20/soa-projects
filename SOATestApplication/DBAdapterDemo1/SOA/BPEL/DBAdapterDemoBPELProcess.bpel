<process name="DBAdapterDemoBPELProcess"
               targetNamespace="http://xmlns.oracle.com/SOATestApplication/DBAdapterDemo1/DBAdapterDemoBPELProcess"
               xmlns="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
               xmlns:client="http://xmlns.oracle.com/SOATestApplication/DBAdapterDemo1/DBAdapterDemoBPELProcess"
               xmlns:ora="http://schemas.oracle.com/xpath/extension"
               xmlns:ui="http://xmlns.oracle.com/soa/designer"
               xmlns:bpelx="http://schemas.oracle.com/bpel/extension"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:ns1="http://xmlns.oracle.com/pcbpel/adapter/db/SOATestApplication/DBAdapterDemo1/dbAdapterDemoReference"
         xmlns:ns2="http://xmlns.oracle.com/pcbpel/adapter/db/sp/dbAdapterDemoReference"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <import ui:processWSDL="true" namespace="http://xmlns.oracle.com/SOATestApplication/DBAdapterDemo1/DBAdapterDemoBPELProcess" location="../WSDLs/DBAdapterDemoBPELProcess.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        PARTNERLINKS                                                      
        List of services participating in this BPEL process               
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    --> 
  <partnerLinks>
    <!-- 
      The 'client' role represents the requester of this service. It is 
      used for callback. The location and correlation information associated
      with the client role are automatically set using WS-Addressing.
    -->
    <partnerLink name="dbadapterdemobpelprocess_client" partnerLinkType="client:DBAdapterDemoBPELProcess" myRole="DBAdapterDemoBPELProcessProvider"/>
    <partnerLink name="dbAdapterDemoReference" partnerLinkType="ns1:dbAdapterDemoReference_plt"
                 partnerRole="dbAdapterDemoReference_role"/>
  </partnerLinks>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      VARIABLES                                                        
      List of messages and XML documents used within this BPEL process 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <variables>
    <!-- Reference to the message passed as input during initiation -->
    <variable name="inputVariable" messageType="client:DBAdapterDemoBPELProcessRequestMessage"/>

    <!-- Reference to the message that will be returned to the requester-->
    <variable name="outputVariable" messageType="client:DBAdapterDemoBPELProcessResponseMessage"/>
    <variable name="Invoke_dbAdaDemoReference_InputVariable" messageType="ns1:args_in_msg"/>
    <variable name="Invoke1_dbAdaDemoReference_OutputVariable" messageType="ns1:args_out_msg"/>
  </variables>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
     ORCHESTRATION LOGIC                                               
     Set of activities coordinating the flow of messages across the    
     services integrated within this business process                  
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <sequence name="main">

    <!-- Receive input from requestor. (Note: This maps to operation defined in DBAdapterDemoBPELProcess.wsdl) -->
    <receive name="receiveInput" partnerLink="dbadapterdemobpelprocess_client" portType="client:DBAdapterDemoBPELProcess" operation="process" variable="inputVariable" createInstance="yes"/>
    <assign name="AssignInput">
      <copy>
        <from>$inputVariable.payload/client:input</from>
        <to expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">$Invoke_dbAdaDemoReference_InputVariable.InputParameters/ns2:vId</to>
      </copy>
    </assign>
    <invoke name="Invoke1" partnerLink="dbAdapterDemoReference"
            portType="ns1:dbAdapterDemoReference_ptt" operation="dbAdapterDemoReference"
            inputVariable="Invoke_dbAdaDemoReference_InputVariable"
            outputVariable="Invoke1_dbAdaDemoReference_OutputVariable" bpelx:invokeAsDetail="no"/>
    <assign name="AssignOuput">
      <copy>
        <from>$Invoke1_dbAdaDemoReference_OutputVariable.OutputParameters/ns2:vName</from>
        <to expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">$outputVariable.payload/client:result</to>
      </copy>
    </assign>
    <!-- Generate reply to synchronous request -->
    <reply name="replyOutput" partnerLink="dbadapterdemobpelprocess_client" portType="client:DBAdapterDemoBPELProcess" operation="process" variable="outputVariable"/>
  </sequence>
</process>